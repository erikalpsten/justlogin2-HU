<% content_for :body_content_title do %>
  <%= @plan.icon_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Icon Name</h1>
    <p>
      <%=raw @plan.icon_name %>
    </p>
  </section>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @plan.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @plan.description %>
    </p>
  </section>
  <section>
    <h1>Definition</h1>
    <p>
      <%=raw @plan.definition %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="plans">
      <% @plans.each do |plan| %>
        <li>
          <%= link_to plan.icon_name, refinery.products_plan_path(plan) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
