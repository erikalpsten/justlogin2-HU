<dd data-product-column="<%=index%>">
  <div class="product-wrapper selection">
    <div class="product-header">
      <div class="img">
        <% if product.logo %>
            <%= image_tag(product.logo.image.remote_url, width: 45, height: 45) %>
        <% else %>
            <img src="http://placehold.it/80x80">
        <% end %>
      </div>
      <div class="name">
        <h2><%= product.insurer %></h2>
        <h3><%= product.name %></h3>
      </div>
      <div class="clearfix"></div>
      <h2 class="premium">
        <%= number_to_currency(product.premium, unit: '$', precision: 0) %>
        <span>/month</span>
      </h2>
      <hr>
    </div>
    <div class="product-footer">
      <div class="pull-left">
        <a href="/">More details</a>
      </div>
      <div class="pull-right">
        <%=input_select_product(product, true)%>
        <strong>Select</strong>
      </div>
      <div class="clearfix"></div>
    </div>
    <div class="product-close" data-product-id="<%=index%>"></div>
  </div>
</dd>