<% content_for :body_content_title do %>
  <%= @feature_group.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @feature_group.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="feature_groups">
      <% @feature_groups.each do |feature_group| %>
        <li>
          <%= link_to feature_group.name, refinery.products_feature_group_path(feature_group) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
