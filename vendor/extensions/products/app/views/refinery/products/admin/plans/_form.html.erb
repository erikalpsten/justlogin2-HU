<%= form_for [refinery, :products_admin, @plan] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @plan,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :icon_name -%>
    <%= f.select :icon_name, ['life', 'critical', 'hospital'], :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name -%>
  </div>

  <div class='field'>
    <%= f.label :description -%>
    <%= f.text_field :description -%>
  </div>

  <div class='field'>
    <%= f.label :definition -%>
    <%= f.text_field :definition -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.plans.admin.plans.plan'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @plan.icon_name) -%>
<% end -%>
