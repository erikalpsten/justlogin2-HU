<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(feature_group) -%>">
  <span class='title'>
    <%= feature_group.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%#= action_icon(:preview, refinery.products_feature_group_path(feature_group), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_products_admin_feature_group_path(feature_group), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.products_admin_feature_group_path(feature_group), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: feature_group.name)}}  ) %>
  </span>
</li>
