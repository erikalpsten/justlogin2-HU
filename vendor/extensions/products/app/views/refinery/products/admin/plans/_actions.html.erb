<ul>
  <% if ::Refinery::Products::Admin::PlansController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.products_admin_plans_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_products_admin_plan_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Products::Admin::PlansController.sortable? && ::Refinery::Products::Plan.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.products_admin_plans_path,
                     t('.reorder', what:  "Plans"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.products_admin_plans_path,
                      t('.reorder_done', what: "Plans"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
