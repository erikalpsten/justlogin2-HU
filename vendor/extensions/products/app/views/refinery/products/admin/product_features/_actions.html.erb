<ul>
  <% if ::Refinery::Products::Admin::ProductFeaturesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.products_admin_product_features_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_products_admin_product_feature_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Products::Admin::ProductFeaturesController.sortable? && ::Refinery::Products::ProductFeature.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.products_admin_product_features_path,
                     t('.reorder', what:  "Product Features"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.products_admin_product_features_path,
                      t('.reorder_done', what: "Product Features"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
