<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(plan) -%>">
  <span class='title'>
    <%= plan.icon_name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:edit,    refinery.edit_products_admin_plan_path(plan), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.products_admin_plan_path(plan), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: plan.icon_name)}}  ) %>
  </span>
</li>
