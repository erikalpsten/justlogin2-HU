<%= simple_form_for [refinery, :products_admin, @product_feature] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product_feature,
              :include_object_name => true %>

  <%=f.input :name, input_html: { class: 'larger widest'}%>
  <%=f.association :feature_group,  input_html: { class: 'larger widest'}%>


  <div class='field'>
    <%= f.label :is_in_summary -%>
    <%= f.check_box :is_in_summary, :checked => @product_feature[:is_in_summary] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.product_features.admin.product_features.product_feature'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product_feature.name) -%>
<% end -%>
