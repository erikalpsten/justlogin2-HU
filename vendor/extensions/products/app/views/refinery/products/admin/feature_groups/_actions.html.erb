<ul>
  <% if ::Refinery::Products::Admin::FeatureGroupsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.products_admin_feature_groups_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_products_admin_feature_group_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Products::Admin::FeatureGroupsController.sortable? && ::Refinery::Products::FeatureGroup.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.products_admin_feature_groups_path,
                     t('.reorder', what:  "Feature Groups"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.products_admin_feature_groups_path,
                      t('.reorder_done', what: "Feature Groups"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
