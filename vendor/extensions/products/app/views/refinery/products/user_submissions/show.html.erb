<% content_for :body_content_title do %>
  <%= @user_submission.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @user_submission.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @user_submission.last_name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="user_submissions">
      <% @user_submissions.each do |user_submission| %>
        <li>
          <%= link_to user_submission.first_name, refinery.products_user_submission_path(user_submission) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
