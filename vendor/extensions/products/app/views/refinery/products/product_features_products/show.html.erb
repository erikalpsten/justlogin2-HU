<% content_for :body_content_title do %>
  <%= @product_features_product.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Product Feature</h1>
    <p>
      <%=raw @product_features_product.product_feature_id %>
    </p>
  </section>
  <section>
    <h1>Product</h1>
    <p>
      <%=raw @product_features_product.product_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="product_features_products">
      <% @product_features_products.each do |product_features_product| %>
        <li>
          <%= link_to product_features_product.title, refinery.products_product_features_product_path(product_features_product) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
