<table class="policy__details">
  <tbody>
   <tr>
      <td class="policy__row__header">
        Insurer
      </td>
      <td>
        <% if @policy.logo.present? %>
          <%= image_tag(@policy.logo.thumbnail(geometry: "200x200#c").url, :class => "policy__details__logo")%>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="policy__row__header">
        Policy Type
      </td>
      <td>
        <%= @policy.benefit.name %>
      </td>
    </tr>
    <tr>
      <td class="policy__row__header">
        Advisor
      </td>
      <td>
        <%= @policy.advisor_name %>
      </td>
    </tr>
    <tr>
      <td class="policy__row__header">
        Premiums
      </td>
      <td>
        $<%= @policy.premium  %>
      </td>
    </tr>
  </tbody>  
</table>

<% if @policy.claim.present? %>
  <%= button_to('Claim!', '/policies/claims/' + @policy.claim.id.to_s, method: :get, class: 'btn btn-primary') %>
<% else %>
    <button class='btn btn-primary' diabled='true'> Claim! </button>
<% end %>

<h3>Benefit: <%= @policy.benefit.name %> </h3>
<p><b>Insurer: </b> <%= @policy.insurer %></p>
<p><b>Premium:</b> $<%= @policy.premium %>/year</p>
<p><b>Advisor: </b> <%= @policy.advisor_name %></p>

<% if @policy.attachments.present? %>
  <% @policy.attachments.each do |attachment| %>
    <% if attachment.file.present? %>
      <p>
        <b> Attachment :  </b> <%= link_to attachment.name, attachment.file.url %>
        (click to download -
        <%= attachment.file.file_name %> - <%= number_to_human_size(attachment.file.size) %>
        )
      </p>
    <% end %>
  <% end %>
<% end %>

