<% if @policy.logo.present? %>

  <%= link_to image_tag(@policy.logo.thumbnail(geometry: "200x200#c").url),
                    @policy.logo.thumbnail(geometry: "900x600").url %>
<% end %>

<h3>Benefit: <%= @policy.benefit.name %> </h3>
<p><b>Source: </b> <%= @policy.benefit.source %></p>
<%= @policy.benefit.description.html_safe %>
<h5>Feature: <%= @policy.benefit.feature.html_safe %> </h5>
<p><b>Insurer: </b> <%= @policy.insurer %></p>
<p><b>Premium: </b> <%= @policy.premium %></p>

<% if @policy.attachments.present? %>
<%= @policy.attachments.each do |attachment| %>
  <% if attachment.file.present? %>
  <p>
    <b> Attachment :  </b><%= link_to attachment.name, attachment.file.url %>
    (click to download
     <%= attachment.file.file_name %> - <%= number_to_human_size(attachment.file.size) %>
     )
  </p>
  <% end %>
<% end %>
<% end %>
