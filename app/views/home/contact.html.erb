<%= content_for(:page_buttons) do %>
    <ul class="nav navbar-nav navbar-left navbar-justlogin">
      <li>
        <button class="btn btn-link back-button">Previous</button>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right navbar-justlogin">
      <li>
        <button class="btn btn-primary" onclick="location.href='/complete';">Save and Continue</button>
      </li>
    </ul>
<% end %>

<div class="content container">
  <div class="row">
    <div class="col-sm-12">

      <div>
        <div class="row tab-header">
          <div class="col-sm-12 text-center">
            <h2>Contact Details</h2>
          </div>
        </div>

        <div class="row tab-body">
          <div class="form-group with-helper col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <label for="fname" class="control-label">First Name</label>
            <input type="text" name="fname" class="form-control" id="fname" placeholder="First name" required="required">
          </div>
          <div class="form-group with-helper col-sm-4 col-sm-offset-0 col-xs-10 col-xs-offset-1">
            <label for="lname" class="control-label">Last Name</label>
            <input type="text" name="lname" class="form-control" id="lname" placeholder="Last name" required="required">
          </div>

          <div class="form-group with-helper col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <label for="email" class="control-label">Email address</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Email" required="required">
          </div>
          <div class="form-group with-helper col-sm-4 col-sm-offset-0 col-xs-10 col-xs-offset-1">
            <label for="company" class="control-label">Company</label>
            <input type="text" name="company" class="form-control" id="company" placeholder="Company" required="required">
          </div>
          <div class="form-group with-helper col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <label for="company" class="control-label">Contact number</label>
            <input type="number" name="contact" class="form-control" id="contact" placeholder="Contact number" required="required">
          </div>
          <div class="form-group col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            <label for="company" class="control-label">Other inquiries</label>
            <textarea class="form-control" rows="3"></textarea>
          </div>
        </div>

      </div>


      <div class="clearfix"></div>
    </div>

  </div>
</div>