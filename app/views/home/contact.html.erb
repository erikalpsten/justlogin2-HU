<%= content_for(:page_buttons) do %>
    <ul class="nav navbar-nav navbar-left navbar-justlogin">
      <li>
        <button class="btn btn-link back-button" data-previous-step="/confirm">Previous</button>
      </li>
    </ul>
    <ul class="nav navbar-nav navbar-right navbar-justlogin">
      <li>
        <button class="btn btn-primary submit-button" data-form-target="complete-step">Save and Continue</button>
      </li>
    </ul>
<% end %>

<%= simple_form_for @user_submission, url: '/process/complete', method: :post, html: { id: 'complete-step' } do |f| %>
    <div class="content container">
      <div class="row">
        <div class="col-sm-12">
          <div>
            <div class="row tab-header">
              <div class="col-sm-12 text-center">
                <h2>Contact Details</h2>
              </div>
            </div>

            <div class="row tab-body">
              <%= f.input :first_name, placeholder: 'First Name', wrapper_html: { class: 'with-helper col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1' } %>
              <%= f.input :last_name, placeholder: 'Last Name', wrapper_html: { class: 'with-helper col-sm-4 col-sm-offset-0 col-xs-10 col-xs-offset-1' } %>
              <%= f.input :email, placeholder: 'Email', required: false, wrapper_html: { class: 'with-helper col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1' } %>
              <%= f.input :company, placeholder: 'Company', wrapper_html: { class: 'with-helper col-sm-4 col-sm-offset-0 col-xs-10 col-xs-offset-1' } %>
              <%= f.input :phone_number, placeholder: 'Contact Number', wrapper_html: { class: 'with-helper col-sm-4 col-sm-offset-2 col-xs-10 col-xs-offset-1' } %>
              <%= f.input :other_inquiries, as: :text, row: 3, placeholder: 'Other inquiries', wrapper_html: { class: 'col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1' } %>
            </div>

          </div>


          <div class="clearfix"></div>
        </div>

      </div>
    </div>
<% end %>