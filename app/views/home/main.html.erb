  <div id="product-listing">
    <div style="margin-top:120px ;">
      <div>
        <form method="get" name="search" action="main">
          <input type="search" id="search" name="search" style="width: 350px; margin-left: 30px;" class="" placeholder="Search Employee Name"/>
          <button>Submit</button>
        </form>
        <% if @products.length != 0%>
          <table class="tg">
            <tr>
              <th class="tg-1 tablehead">Employee Name</th>
              <th class="tg-1 tablehead">Product</th>
              <th class="tg-2 tablehead">End Date</th>
            </tr>

            <% @products.each do |product| %>
              <%= render partial: 'tablerow', locals: { product: product } %>
            <% end %>

          </table>
        <% else %>
          <table class="tg">
            <tr><th class="tg-1 tablehead">No such products found...</th></tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
