<div class="wrapper" id="product-listing">
      <div class="dashboard-search">
        <form method="get" name="search" action="main">
          <input type="text" id="search" name="search" placeholder="Enter employee name"/>
          <button>Search</button>
        </form>
      </div>
      <div>
        <% if @products.length != 0%>
          <table class="dashboard-table table">
            <thead>
              <tr class="table__head">
                <th class="table__item__name">Employee Name</th>
                <th class="table__item__policy">Policy Name</th>
                <th class="table__item__expire">Expiry Date</th>
              </tr>
            </thead>
            <tbody>
            <% @products.each do |product| %>
              <%= render partial: 'tablerow', locals: { product: product } %>
            <% end %>
            </tbody>
          </table>
        <% else %>
          <table class="dashboard-table table">
            <tr><td class="tablehead">No such products found...</td></tr>
          </table>
        <% end %>
      </div>
    </div>
<script>
  var open = false;
  function dropdown(){
      document.getElementById("myDropdown").classList.toggle("show");
